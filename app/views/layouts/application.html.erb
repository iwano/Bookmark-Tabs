<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag "application", "http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.1/themes/base/jquery-ui.css", media: "all" %>
  <link rel="stylesheet" href="/styles/jqx.base.css" type="text/css" />  
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>
    <div class="container main">
      <%= render 'layouts/header' %>
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
      <%= yield %>
    </div>
    <%= javascript_include_tag "application", "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.8/jquery-ui.min.js", "/javascript/jqxcore.js", "/javascript/jqxsplitter.js" %>
</body>
</html>